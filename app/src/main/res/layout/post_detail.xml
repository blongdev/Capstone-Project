<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post_detail_layout"
    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/content_spacer"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_username"
                    style="@style/PostDetailUsername"
                    android:textColor="@color/secondary_text"
                    android:text="Username"/>

                <TextView
                    android:id="@+id/post_subreddit"
                    style="@style/PostDetailSubreddit"
                    android:layout_toRightOf="@id/post_username"
                    android:textColor="@color/secondary_text"
                    android:text="Subreddit"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/post_title"
                style="@style/PostDetailTitle"
                android:layout_gravity="start"
                android:text="Title"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_points"
                    style="@style/PostDetailPoints"
                    android:textColor="@color/secondary_text"
                    android:text="Points"/>

                <TextView
                    android:id="@+id/post_comments"
                    style="@style/PostDetailComments"
                    android:textColor="@color/secondary_text"
                    android:layout_toRightOf="@id/post_points"
                    android:text="Comments"/>

                <TextView
                    android:id="@+id/post_url"
                    style="@style/PostDetailUrl"
                    android:textColor="@color/secondary_text"
                    android:layout_toRightOf="@id/post_comments"
                    android:text="Url"/>

                <TextView
                    android:id="@+id/post_age"
                    style="@style/PostDetailAge"
                    android:textColor="@color/secondary_text"
                    android:layout_toRightOf="@id/post_url"
                    android:text="Age"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
