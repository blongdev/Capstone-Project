<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PostText" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PostTitle" parent="PostText" >
        <item name="android:layout_row">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="PostUpper" parent="PostText" >
        <item name="android:layout_row">0</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PostUsername" parent="PostUpper" >
        <item name="android:layout_column">0</item>
    </style>

    <style name="PostSubreddit" parent="PostUpper">
        <item name="android:layout_column">1</item>
    </style>

    <style name="PostLower" parent="PostText" >
        <item name="android:layout_row">2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="PostPoints" parent="PostLower" >
        <item name="android:layout_column">0</item>
    </style>

    <style name="PostComments" parent="PostLower" >
        <item name="android:layout_column">1</item>
    </style>

    <style name="PostUrl" parent="PostLower" >
        <item name="android:layout_column">2</item>
    </style>

    <style name="PostAge" parent="PostLower" >
        <item name="android:layout_column">3</item>
    </style>

    <style name="PostButton" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_column">4</item>
        <item name="android:layout_rowSpan">3</item>
    </style>

</resources>
