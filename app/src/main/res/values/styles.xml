<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PostText" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PostTitle" parent="PostText" >
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PostUpper" parent="PostText" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PostUsername" parent="PostUpper" >

    </style>

    <style name="PostSubreddit" parent="PostUpper">

    </style>

    <style name="PostLower" parent="PostText" >
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="PostPoints" parent="PostLower" >

    </style>

    <style name="PostComments" parent="PostLower" >

    </style>

    <style name="PostUrl" parent="PostLower" >

    </style>

    <style name="PostAge" parent="PostLower" >

    </style>

    <style name="PostButton" parent="@android:style/Widget.ImageButton">

    </style>

</resources>
